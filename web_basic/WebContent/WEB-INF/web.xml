<?xml version="1.0" encoding="UTF-8"?>

<web-app>
	<servlet>
		<servlet-name>hello</servlet-name>
		<servlet-class>com.jsp.servlet.HelloServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/hello.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>lifeTime</servlet-name>
		<servlet-class>com.jsp.servlet.LifeCycleServlet</servlet-class>
		<init-param>
			<param-name>path</param-name>
			<param-value>c:/download</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>lifeTime</servlet-name>
		<url-pattern>/life/time</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>memberList</servlet-name>
		<servlet-class>com.jsp.servlet.MemberListServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>memberList</servlet-name>
		<url-pattern>/memList</url-pattern>
	</servlet-mapping>
</web-app>